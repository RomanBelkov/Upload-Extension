        <TextBox x:Name="IpAddress" HorizontalAlignment="Left" x:FieldModifier="public" Height="37" Margin="10,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Text="192.168.1.1" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="ConnectToTrik" Content="Connect" x:FieldModifier="public" HorizontalAlignment="Left" VerticalAlignment="Top" Width="85" Margin="10.819,168,0,0" Height="38" FontSize="20" Grid.Column="1"/>
        <Label x:Name="MessageLabel" Content="" x:FieldModifier="public" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="261" Height="50" Cursor="" FontSize="14" Grid.ColumnSpan="2"/>
        
        
    </Grid>
